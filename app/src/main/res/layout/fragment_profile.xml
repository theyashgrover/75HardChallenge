<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/profile_bg" />

    <TextView
        android:layout_width="249sp"
        android:layout_height="44sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:text="You will soon be able to add friends ,
manage statistics and grow with the community."
        android:textSize="12sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/profile_history_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_history_icon_svg"
        android:layout_marginTop="520dp"
        android:layout_marginStart="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="518.5dp"
        android:layout_marginStart="130dp"
        android:text="History"
        android:textColor="@color/black_project"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/profile_about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginStart="235dp"
        android:src="@drawable/profile_about_icon"/>
    <TextView
        android:id="@+id/aboutTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"

        android:layout_marginTop="518.5dp"
        android:layout_marginStart="265dp"
        android:textSize="16sp"
        android:textColor="@color/black_project"
        />

</RelativeLayout>